<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_university"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingTop="8dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/iw_uni"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:src="@drawable/dokuz_eylul_uni"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tw_universityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Dokuz EylÃ¼l University"
        android:textColor="@color/md_theme_dark_background"
        android:textSize="12sp" />



</LinearLayout>